<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:freezesText="true"
    tools:context="com.example.shakil.tic_tac_toe.MainActivity"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/colorAccent"
    android:freezesText="true"
   >

    <TextView
        android:id="@+id/name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tom: 0"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:freezesText="true"


        />
    <TextView
        android:id="@+id/name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adam: 0"
        android:textSize="30sp"
        android:layout_below="@+id/name1"
        android:layout_marginLeft="10dp"
        android:freezesText="true"

        />
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:background="@color/colorPrimaryDark"
        android:freezesText="true"/>

</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:freezesText="true"
        android:layout_weight="1">

        <Button
            android:id="@+id/game_11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="60dp"
            android:background="@color/colorBackground"
            android:freezesText="true"

            />
        <Button
            android:id="@+id/game_12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="60dp"
            android:textAlignment="center"
            android:background="@color/colorPrimaryDark"
            android:freezesText="true"

            />
        <Button
            android:id="@+id/game_13"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="60dp"
            android:textAlignment="center"
            android:background="@color/colorBackground"
            android:freezesText="true"

            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:freezesText="true"
        android:layout_weight="1">

        <Button
            android:id="@+id/game_21"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="60dp"
            android:textAlignment="center"
            android:background="@color/colorPrimaryDark"
            android:freezesText="true"

            />
        <Button
            android:id="@+id/game_22"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="60dp"
            android:textAlignment="center"
            android:background="@color/colorBackground"
            android:freezesText="true"

            />
        <Button
            android:id="@+id/game_23"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="60dp"
            android:textAlignment="center"
            android:background="@color/colorPrimaryDark"
            android:freezesText="true"

            />




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:freezesText="true"
        android:layout_weight="1">

        <Button
            android:id="@+id/game_31"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="60dp"
            android:textAlignment="center"
            android:background="@color/colorBackground"
            android:freezesText="true"

            />
        <Button
            android:id="@+id/game_32"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="60dp"
            android:textAlignment="center"
            android:background="@color/colorPrimaryDark"
            android:freezesText="true"

            />
        <Button
            android:id="@+id/game_33"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="60dp"
            android:textAlignment="center"
            android:background="@color/colorBackground"
            android:freezesText="true"


            />




    </LinearLayout>

</LinearLayout>
