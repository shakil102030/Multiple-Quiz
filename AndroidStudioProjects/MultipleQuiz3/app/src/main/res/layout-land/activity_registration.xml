<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground2"
    android:freezesText="true"
    tools:context="com.example.shakil.multiplequiz.Registration">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="@string/A"
            android:textSize="30sp"
            android:padding="20dp"
            android:textColor="@color/colorBlack"
            android:freezesText="true"
            />

        <EditText
            android:id="@+id/EmailEditTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/B"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:freezesText="true"
            />

        <EditText
            android:id="@+id/PasswordEditTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/C"
            android:inputType="textPassword"
            android:singleLine="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:freezesText="true"
            />

        <Button
            android:id="@+id/RegistrationButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/D"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:onClick="register"
            android:textColor="#fff"
            android:background="@color/colorPrimaryDark"
            android:freezesText="true"
            />

        <TextView
            android:id="@+id/LoginTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/F"
            android:textStyle="bold"
            android:textSize="25sp"
            android:freezesText="true"/>



</LinearLayout>
